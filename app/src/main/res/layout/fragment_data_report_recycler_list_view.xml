<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorColumnBackground">


            <TextView
                android:id="@+id/fragment_data_report_recycler_list_view_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0.4"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="sans-serif"

                />

            <TextView
                android:id="@+id/fragment_data_report_recycler_list_view_key"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0.5"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="sans-serif"


                />
        </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_data_report_machine_refusal_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>